<form asp-controller="Cadete" asp-action="crearCadetes" method="post">
    <fieldset>
        <legend>Datos del Cadete</legend>

        <p>
            <label for="apellido">Apellido:</label>
            <input id="apellido" type="text" name="apellido_cadete" />
        </p>
        <p>
            <label for="nombre">Nombres:</label>
            <input id="nombre" type="text" name="nombre_cadete" />
        </p>
        <p>
            <label for="dni">DNI:</label>
            <input id="dni" type="text" name="dni_cadete" />
        </p>
        <p>
            <label for="domicilio">Domicilio:</label>
            <input id="domicilio" type="text" name="domicilio_cadete" />
        </p>
        <p>
            <label for="tel">Telefono:</label>
            <input id="tel" type="text" name="telefono_cadete" />
        </p>
    </fieldset>
    <button type="submit">Crear Cadete</button>
</form>